# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/travel-app

# JWT Configuration
JWT_SECRET=travel-app-jwt-secret-key-2024-secure-and-long-enough
REFRESH_TOKEN_SECRET=travel-app-refresh-token-secret-key-2024-secure
EMAIL_SECRET=travel-app-email-verification-secret-key-2024
RESET_SECRET=travel-app-password-reset-secret-key-2024

# Email Configuration (using Gmail as an example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your.email@gmail.com

# Client Configuration
CLIENT_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5001/api

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# React Development Settings
FAST_REFRESH=true
GENERATE_SOURCEMAP=false
BROWSER=none
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true

# Google OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

REACT_APP_API_URL=http://localhost:5001/api 