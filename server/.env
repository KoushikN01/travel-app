# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/travel-app

# JWT Configuration
JWT_SECRET=travel-app-jwt-secret-key-2024-secure-and-long-enough
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-2024
EMAIL_SECRET=your-super-secret-email-key-2024
RESET_SECRET=your-super-secret-reset-key-2024

# Email Configuration (using Gmail as an example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=TravelApp <noreply@travelapp.com>

# Client Configuration
CLIENT_URL=http://localhost:3001

# Cloudinary Configuration
# Get these values from your Cloudinary Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name    # Example: dk8vx8x8x
CLOUDINARY_API_KEY=your_api_key         # Example: 123456789012345
CLOUDINARY_API_SECRET=your_api_secret   # Example: abcdefghijklmnopqrstuvwxyz 